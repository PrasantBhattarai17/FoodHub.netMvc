@model List<HotelDto>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Marketplace</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color:antiquewhite;
        }

        .navbarclass {
            height:100px;
            width:100%;
            display:flex;
            flex-direction:row;
            align-items:center;
            background-color:darkorange;
        }
        .navbarclass .logo{
            width:130px;
            height:130px;
        }
        .navbarclass .btnOut{
            width:130px;
            border-radius:5px;
            margin-right:5px;
            color:white;
            text-decoration:none;
            font:bold;

        } .navbarclass .btnmid{
            width:60px;
            border-radius:5px;
            margin:15px;
            color:white;
            text-decoration:none;
            font:bold;

        }

        .hotel-card {
            border: 1px solid #ddd;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
            transition: transform 0.3s ease-in-out;
            background-color:whitesmoke;
        }

            .hotel-card:hover {
                transform: translateY(-10px);
            }

            .hotel-card img {
                width: 100%;
                height: 200px;
                object-fit: cover;
            }

        .hotel-card-body {
            padding: 15px;
        }

        .hotel-name {
            font-size: 1.5rem;
            font-weight: bold;
        }

        .hotel-rating,
        .hotel-price {
            margin-top: 10px;
            font-size: 1.1rem;
        }

        .hotel-location,
        .hotel-cuisines,
        .hotel-category,
        .hotel-discount {
            font-size: 1rem;
            color: #555;
        }

        .stars {
            color: gold;
        }

        .rating-container {
            display: flex;
            align-items: center;
        }

        .rating-star {
            font-size: 1.3rem;
            margin-right: 2px;
        }

        .btn {
            background-color: orange;
            border-color: orange;
            border-radius: 5px;
        }

            .btn:hover {
               background-color:darkorange;
                border-color: orange;
            }
            
    </style>
</head>
<body>
    <nav class="navbarclass ">
        <div class="container-fluid">
          <a asp-controller="Shop" asp-action="MovetoHome">
          <img class="logo"  src="~/logo.png"/>
          </a>
              </div>
        <a asp-controller="Others" asp-action="MovetoLoginPage" class="btnOut">
            <i class="fa-solid fa-cart-shopping">  Kart</i>
        </a> 
        <a asp-controller="Others" asp-action="MovetoLoginPage" class="btnmid">
            <i class="fa-solid fa-user"></i>
        </a>
              <a asp-controller="Others" asp-action="MovetoLoginPage" class="btnOut">
            <i class="fa-solid fa-right-from-bracket"> Signout</i>
                  </a>
    </nav>

    <div class="container mt-5">
        <h1 class="text-center mb-4">Top Restaurants around you</h1>
        <div class="row">
            @foreach (var hotel in Model)
            {
                <div class="col-md-4">
                    <div class="hotel-card">
                        <img src="@hotel.HotelImg" alt="@hotel.HotelName">
                        <div class="hotel-card-body">
                            <p class="hotel-name">@hotel.HotelName</p>
                            <div class="rating-container">
                                <div class="stars">
                                    @for (var i = 0; i < hotel.Rating; i++)
                                    {
                                        <span class="rating-star">★</span>
                                    }
                                    @for (var i = hotel.Rating; i < 5; i++)
                                    {
                                        <span class="rating-star">☆</span>
                                    }
                                </div>
                                <span class="ml-2">(@hotel.Rating/5)</span>
                            </div>
                            <p class="hotel-price">Price: @hotel.Price</p>
                            <p class="hotel-location">Location: @hotel.Location</p>
                            <p class="hotel-cuisines">Cuisines: @hotel.Cuisines</p>
                            <p class="hotel-category">Category: @hotel.category</p>
                            <p class="hotel-discount">Discount: @hotel.Discount</p>
                            <form method="post" asp-controller="Shop" asp-action="ViewHotels" class="d-inline-block">
                                <input type="hidden" name="id" value="@hotel.HotelId" />
                                <button class="btn" type="submit">View Details</button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

</body>
</html>
