@model List<UserDTO>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registered Users</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html, body {
            height: 100%;
            overflow: hidden;
            display: flex;
            flex-direction: column;
        }
        .sidebar {
            width: 250px;
            height: 100vh;
            background:Darkorange; 
            color: white;
            position: fixed;
           
        }

            .sidebar a {
                display: block;
                color: white;
                padding: 15px;
                text-decoration: none;
                font-size: 18px;
                transition: 0.3s;
            }

                .sidebar a:hover {
                    background: orange;
                }

            .sidebar .logo {
                display: flex;
                flex-direction: column;
                align-items: center;
                font-weight: bold;
                border-bottom: 1px solid white;
            }

                .sidebar .logo .logoImg {
                    height: 140px;
                    width: 140px;
                    margin-right: 20px;
                }
        .main-content {
            margin-left: 250px;
            flex-grow: 1;
            padding: 20px;
            height: 100vh;
            overflow-y: auto;
            display: flex;
            flex-direction: column;
            background-color: antiquewhite;
        }
        .table-container {
            flex-grow: 1;
            overflow-x: auto;
            display: flex;
            flex-direction: column;
            border-radius:10px;
        
           
        }

        .table {
            width: 100%;
            border-collapse: collapse;
            background: white;
            font-size: 18px;
        }

            .table th, .table td {
                text-align: left;
                padding: 16px;
                border-bottom: 1px solid #ddd;

            }

            .table th {
                background: Darkorange;
                color: white;
            }
        .action-buttons {
            display: flex;
            gap: 10px;
        }
      
        .back-btn-container {
           
            text-align: center;
            position: relative;
        }

    </style>
</head>
<body>

    <div class="sidebar">
        <div class="logo">
            <img class="logoImg" src="~/logo.png" />
        </div>
        <a asp-controller="Others" asp-action="BackToDashboard">
            <i class="fa-solid fa-table-columns"></i> Dashboard
        </a>
        <a asp-controller="Others" asp-action="GetEndUsers">
            <i class="fas fa-users"></i> End Users
        </a>
        <a asp-controller="Hotel" asp-action="GetHotels">
            <i class="fas fa-hotel"></i> Hotels
        </a>
        <a asp-controller="Food" asp-action="ListOfFoods">
            <i class="fas fa-utensils"></i> Foods
        </a>
        <a asp-controller="Others" asp-action="Signout">
            <i class="fa-solid fa-right-from-bracket"></i>  Signout
        </a>
    </div>

    <div class="main-content">
        <h1 class="mb-4">Registered Users</h1>

        <div class="table-container">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>User ID</th>
                        <th>Username</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.Id</td>
                            <td>@user.Username</td>
                            <td class="action-buttons">
                                <form method="post" asp-controller="Others" asp-action="EditUser">
                                    <input type="hidden" name="id" value="@user.Id" />
                                    <button class="btn btn-warning btn-sm" type="submit">Edit</button>
                                </form>
                                <form method="post" asp-controller="Others" asp-action="DeleteUser">
                                    <input type="hidden" name="id" value="@user.Id" />
                                    <button class="btn btn-danger btn-sm" type="submit">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="back-btn-container">
            <form method="get">
               
                <button class="btn btn-dark text-white " asp-controller="Others" asp-action="BackToDashboard">
                    <i class="fa-solid fa-arrow-left"></i>       
                    Back To Dashboard
                </button>
            </form>
        </div>
    </div>

</body>
</html>
